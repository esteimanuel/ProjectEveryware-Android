<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"     
    android:paddingLeft="10sp"
    android:paddingRight="10sp"  
    android:paddingTop="?android:attr/actionBarSize"
    tools:context=".MijnWijkActivity" >

<LinearLayout
    android:id="@+id/voortgangText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="20sp"
    android:orientation="horizontal">
    
         <TextView android:id="@+id/deelnemerView"             
         android:textSize="32sp"
         android:textColor="@color/White"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"  
         />
        
         <TextView
         android:layout_width="wrap_content"
         android:textColor="@color/White"
         android:textSize="32sp"
         android:layout_height="wrap_content"
         android:paddingLeft="5sp"
         android:text="@string/label_deelnemers"       
         />
         
         <TextView
         android:layout_width="wrap_content"
         android:textColor="@color/White"
         android:layout_height="wrap_content"         
         android:textSize="32sp"
         android:text="@string/label_deelnemers_percentage"   
         />
        
    </LinearLayout>

<GridView
    android:id="@+id/deelnemerGrid"
    android:layout_below="@id/voortgangText"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:columnWidth="60dp"
    android:numColumns="auto_fit"
    android:stretchMode="columnWidth"
    android:gravity="center"/>

</RelativeLayout>